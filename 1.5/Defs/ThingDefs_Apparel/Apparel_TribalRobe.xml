<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<ThingDef ParentName="OutlandApparelMakeableBase">
		<defName>Outland_TribalRobe</defName>
		<label>tribal robe</label>
		<description>A long robe crafted using neolithic tools. While it may look primitive, it is effective at insulating the wearer.</description>
		<graphicData>
			<texPath>Outland/Apparel/TribalRobe/Apparel</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Neolithic</techLevel>
		<costStuffCount>120</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<tradeability>Sellable</tradeability>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>1800</WorkToMake>
			<Mass>2.5</Mass>
			<StuffEffectMultiplierArmor>0.25</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.55</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.55</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>1.5</EquipDelay>
		</statBases>
		<apparel>
			<bodyPartGroups>
				<li>Arms</li>
				<li>Hands</li>
				<li>Neck</li>
				<li>Torso</li>
				<li>Legs</li>
				<li>Feet</li>
			</bodyPartGroups>
			<wornGraphicPath>Outland/Apparel/TribalRobe/Apparel</wornGraphicPath>
			<layers>
				<li>Shell</li>
			</layers>
			<tags>
				<li>Neolithic</li>
			</tags>
			<canBeDesiredForIdeo>false</canBeDesiredForIdeo>
		</apparel>
		<recipeMaker>
			<recipeUsers>
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
				<li>CraftingSpot</li>
			</recipeUsers>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(0.4,0.3,0.15)</only>
				</li>
				<li>
					<weight>15</weight>
					<only>(0.6,0.45,0.18)</only>
				</li>
				<li>
					<weight>20</weight>
					<only>(0.8,0.6,0.23)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>

</Defs>