<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<ThingDef ParentName="OutlandApparelMakeableBase">
		<defName>Outland_TribalHood</defName>
		<label>tribal hood</label>
		<description>Headwear crafted using neolithic tools. While it may look primitive, it is effective at insulating and protecting the wearer.</description>
		<graphicData>
			<texPath>Outland/Apparel/TribalHood/Head</texPath>
			<graphicClass>Graphic_Single</graphicClass>
		</graphicData>
		<techLevel>Neolithic</techLevel>
		<tradeability>Sellable</tradeability>
		<generateCommonality>1</generateCommonality>
		<costStuffCount>30</costStuffCount>
		<stuffCategories>
			<li>Fabric</li>
			<li>Leathery</li>
		</stuffCategories>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<WorkToMake>1400</WorkToMake>
			<Mass>0.1</Mass>
			<StuffEffectMultiplierArmor>0.2</StuffEffectMultiplierArmor>
			<StuffEffectMultiplierInsulation_Cold>0.1</StuffEffectMultiplierInsulation_Cold>
			<StuffEffectMultiplierInsulation_Heat>0.05</StuffEffectMultiplierInsulation_Heat>
			<EquipDelay>1.4</EquipDelay>
		</statBases>
		<thingCategories Inherit='False'>
			<li>Headgear</li>
		</thingCategories>
		<apparel>
			<bodyPartGroups>
				<li>UpperHead</li>
			</bodyPartGroups>
			<wornGraphicPath>Outland/Apparel/TribalHood/Head</wornGraphicPath>
			<layers>
				<li>Overhead</li>
			</layers>
			<tags Inherit='False'>
				<li>Neolithic</li>
				<li>MedievalMilitary</li>
			</tags>
			<defaultOutfitTags>
				<li>Worker</li>
				<li>Soldier</li>
			</defaultOutfitTags>
		</apparel>
		<recipeMaker>
			<recipeUsers Inherit="False">
				<li>ElectricTailoringBench</li>
				<li>HandTailoringBench</li>
				<li>CraftingSpot</li>
			</recipeUsers>
		</recipeMaker>
		<colorGenerator Class="ColorGenerator_Options">
			<options>
				<li>
					<weight>10</weight>
					<only>(0.4,0.3,0.15)</only>
				</li>
				<li>
					<weight>15</weight>
					<only>(0.6,0.45,0.18)</only>
				</li>
				<li>
					<weight>20</weight>
					<only>(0.8,0.6,0.23)</only>
				</li>
			</options>
		</colorGenerator>
	</ThingDef>

</Defs>