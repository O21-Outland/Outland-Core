			<xpath>Defs/ThingDef[defName="Outland_GiantToxociteFormation"]/comps</xpath>
			<value>
				<li Class="CompProperties_Glower">
					<glowRadius>6</glowRadius>
					<glowColor>(110, 196, 147, 0.5)</glowColor>
				</li>
			</value>
		</active>
	</Operation>


</Patch>