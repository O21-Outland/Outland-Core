<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<ThingDef ParentName="OutlandFurnitureWithQualityBase">
		<defName>Outland_Wardrobe</defName>
		<label>wardrobe</label>
		<description>Shelves and drawers for storing clothes.</description>
		<graphicData>
			<texPath>Outland/Buildings/Furniture/Medieval/Wardrobe</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>(3,3)</drawSize>
		</graphicData>
		<size>(1,1)</size>
		<defaultPlacingRot>South</defaultPlacingRot>
		<uiIconScale>0.65</uiIconScale>
		<uiIconOffset>(0, 0.15)</uiIconOffset>
		<altitudeLayer>Pawn</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<fillPercent>1</fillPercent>
		<castEdgeShadows>true</castEdgeShadows>
		<staticSunShadowHeight>0.15</staticSunShadowHeight>
		<surfaceType>Item</surfaceType>
		<canOverlapZones>false</canOverlapZones>
		<statBases>
			<Beauty>8</Beauty>
			<MaxHitPoints>100</MaxHitPoints>
			<Mass>8</Mass>
			<WorkToBuild>3000</WorkToBuild>
			<Flammability>1.0</Flammability>
		</statBases>
		<costStuffCount>120</costStuffCount>
		<stuffCategories>
			<li>Woody</li>
		</stuffCategories>
		<researchPrerequisites>
			<li>Outland_MedievalFurniture</li>
		</researchPrerequisites>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
		<comps>
			<li Class="CompProperties_Facility">
				<statOffsets>
					<Comfort>0.02</Comfort>
				</statOffsets>
				<maxSimultaneous>1</maxSimultaneous>
				<maxDistance>4</maxDistance>
			</li>
		</comps>
	</ThingDef>

</Defs>