<?xml version="1.0" encoding="UTF-8"?>
<Defs>

	<ThingDef ParentName="OutlandFurnitureBase">
		<defName>Outland_Bookshelf</defName>
		<label>bookshelf</label>
		<description>Increases research speed when placed near research table.</description>
		<graphicData>
			<texPath>Outland/Buildings/Furniture/Medieval/Bookshelf</texPath>
			<graphicClass>Graphic_Multi</graphicClass>
			<drawSize>3</drawSize>
			<shaderType>CutoutComplex</shaderType>
		</graphicData>
		<size>(1,1)</size>
		<defaultPlacingRot>South</defaultPlacingRot>
		<uiIconScale>0.65</uiIconScale>
		<uiIconOffset>(0, 0.15)</uiIconOffset>
		<altitudeLayer>Building</altitudeLayer>
		<passability>PassThroughOnly</passability>
		<castEdgeShadows>true</castEdgeShadows>
		<fillPercent>0.6</fillPercent>
		<canOverlapZones>false</canOverlapZones>
		<terrainAffordanceNeeded>Medium</terrainAffordanceNeeded>
		<statBases>
			<MaxHitPoints>120</MaxHitPoints>
			<WorkToBuild>7500</WorkToBuild>
			<Mass>70</Mass>
			<Flammability>1.0</Flammability>
			<Beauty>15</Beauty>
		</statBases>
		<costStuffCount>80</costStuffCount>
		<stuffCategories>
			<li>Woody</li>
		</stuffCategories>
		<constructionSkillPrerequisite>6</constructionSkillPrerequisite>
		<placeWorkers>
			<li>PlaceWorker_ShowFacilitiesConnections</li>
		</placeWorkers>
		<researchPrerequisites>
			<li>Outland_MedievalFurniture</li>
		</researchPrerequisites>
		<comps>
			<li Class="CompProperties_Facility">
				<statOffsets>
					<ResearchSpeedFactor>0.075</ResearchSpeedFactor>
				</statOffsets>
				<maxDistance>5</maxDistance>
				<maxSimultaneous>2</maxSimultaneous>
			</li>
		</comps>
	</ThingDef>

</Defs>